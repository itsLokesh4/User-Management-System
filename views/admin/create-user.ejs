<% include('../layouts/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="d-flex justify-content-center">Adding new user</h1>
      <div class="d-flex justify-content-center align-items-center">
        <a href="/dashboard">
          <button type="button" class="btn btn-dark">Back to Dashboard</button>
        </a>
      </div>
      <br /><br />
      <div
        class="d-flex justify-content-center align-items-center"
        style="height: 500px; background-color: #4070f4"
      >
        <form action="" method="post">
          <!-- Name Input -->
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Enter Name"
            required
          />
          <br /><br />

          <!-- For Email Input -->
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Enter Email"
            required
          />
          <br /><br />

          <!-- For Mobile number -->
          <input
            type="number"
            id="mobile"
            name="mobile"
            placeholder="Enter Phone"
            required
          />
          <br /><br />

          <!-- For password -->
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter Password"
            required
          />
          <br /><br />

          <% if(typeof message !== 'undefined'){ %>

          <p style="color: rgb(255, 255, 255)"><%= message %></p>
          <p>
            <a class="d-flex justify-content-center text-light" href="/login"
              >login here</a
            >
          </p>

          <% } %>
          <div class="d-flex justify-content-center align-items-center">
            <button type="submit" value="Add User" class="btn btn-success">
              Add User
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

