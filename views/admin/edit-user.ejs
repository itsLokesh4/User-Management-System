<% include('../layouts/header.ejs')%>

<div class="d-flex justify-content-center align-items-center">
  <h1>Edit User</h1>
</div>

<div class="d-flex justify-content-center align-items-center">
  <a href="/dashboard">
    <button class="btn btn-primary">Back to Dashboard</button>
  </a>
</div>
<br /><br />

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div
        class="d-flex justify-content-center align-items-center"
        style="height: 500px; background-color: #4070f4"
      >
        <form action="" method="post">
          <input
            type="name"
            name="name"
            placeholder="Enter name"
            value="<%= user.name %>"
            style="width: 300px; height: 40px"
            required
          />
          <br /><br />

          <input
            type="email"
            name="email"
            placeholder="Enter email"
            value="<%= user.email %>"
            style="width: 300px; height: 40px"
            required
          />
          <br /><br />

          <input
            type="number"
            name="mobile"
            placeholder="Enter Mobile no."
            value="<%= user.mobile %>"
            style="width: 300px; height: 40px"
            required
          />
          <br /><br />

          <input
            type="hidden"
            name="id"
            value="<%= user._id %>"
            style="width: 300px; height: 40px"
            required
          />
          <br /><br />

          <div class="d-flex justify-content-center align-items-center">
            <a href="/dashboard">
              <button
                type="submit"
                value="update user"
                class="btn btn-success mx-3"
              >
                Update
              </button>
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

